<?xml version="1.0"
      encoding="utf-8"?>

<pages:NavigationBarPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:pages="clr-namespace:ModalTest.Pages"
             Shell.PresentationMode="ModalAnimated"
             Title="NavigationBarModalExamplePage"
             x:Class="ModalTest.Pages.NavigationBarModalExamplePage">
	<ContentPage.Content>
		<VerticalStackLayout VerticalOptions="Fill"
		                     HorizontalOptions="Fill"
		                     BackgroundColor="Aqua">
			<Button Text="Close" 
			        Clicked="Button_OnClicked"
			        VerticalOptions="Start"/>
			
			<Label Text="Navigation Bar Modal Example Page"
			       VerticalOptions="Center"
			       HorizontalOptions="Center"/>
		</VerticalStackLayout>
	</ContentPage.Content>
</pages:NavigationBarPage>